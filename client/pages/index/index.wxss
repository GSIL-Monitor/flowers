.header-swiper>swiper {
    height: 300rpx;
}

.home-icon {
    width: 80rpx;
    height: 80rpx;
    padding: 10rpx;
    border-radius: 16rpx;
}

.icon-gongying {
    background: rgb(250, 46, 39);
}

.icon-qiugou {
    background: rgba(127, 125, 247, 0.788);
}

.icon-qiye {
    background: rgb(241, 162, 14);
}

.flex-wrp {
    display: flex;
    flex-direction: row;
    text-align: center;
    padding: 20rpx 0 12rpx 0;
    background: #fff;
    color: #666666;
    font-size: 28rpx;
}

.flex-item {
    width: 33.333%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.flex-item>text {
}

.company-item:last-child {
    margin-bottom: 120rpx;
}

.company-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 20rpx;
    border: 1px solid #ddd;
    padding: 20rpx 20rpx 20rpx 26rpx;
    border-radius: 12px;
    background: #fff;
    box-sizing: border-box;
}

.c_img {
    position: relative;
    width: 210rpx;
    min-width: 210rpx;
    margin-right: 18rpx;
    display: flex;
    justify-content: center;
}

.c_img>image {
    height: 160rpx;
    width: 100%;
}

.c_content text {
    display: block;
    /* line-height: 1.4; */
    font-size: 26rpx;
}

.c_content .c_title {
    font-size: 32rpx;
    color: rgb(241, 86, 13);
    margin-bottom: 8rpx;
    line-height: 1.2;
}

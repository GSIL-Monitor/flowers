/* pages/publish/publish.wxss */

.navbar_item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #4c4a4a;
  padding-top: 8px;
  text-align: center;
  font-size: 12pt;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.bar_item_on {
  color: #488156;
}

.bar_item_on>text:nth-child(2) {
  display: block;
  width: 100rpx;
  height: 7rpx;
  background: #488156;
  margin: 0 auto;
  position: relative;
  bottom: 0;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.weui-navbar {
  position: relative;
}

/* 花卉列表开始 */

.flowers-item:last-child {
  margin-bottom: 120rpx;
}

.flowers-item {
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  padding: 12rpx;
  border-bottom: 1px solid #ddd;
}

.f_img {
  position: relative;
  width: 180rpx;
  min-width: 180rpx;
  margin-right: 18rpx;
  display: flex;
  justify-content: center;
}

.f_img>image {
  height: 136rpx;
  width: 100%;
}

.f_content {
  flex: 1;
}

.f_content>.title {
  color: rgb(241, 13, 13);
  font-size: 12pt;
  line-height: 1.4;
  margin-bottom: 5rpx;
}

.f_content .tag {
  display: inline-block;
  margin-left: 20rpx;
  color: rgb(241, 135, 13);
}

.title>.money, .f_content .time {
  float: right;
}

/* 花卉列表结束 */

.addBtn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
}

.addBtn>view {
  background: #05af22;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  color: #fff;
  font-size: 36pt;
  line-height: 66rpx;
  text-align: center;
  box-shadow:6rpx 6rpx 4rpx #aaaaaae8;
}
